<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dip"
    android:orientation="vertical"
    android:id="@+id/item_contain_layout"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/bg_view">
        <com.tpshop.mallc.view.SPBorderImageView
            android:id="@+id/product_imgv"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:src="@drawable/icon_brand_null"
            android:layout_marginTop="@dimen/margin_space_half"
            android:layout_gravity="center_horizontal|center_vertical"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/product_name_txtv"
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:text="小手提包"
            android:maxEms="6"
            android:maxLines="2"
            style="@style/textStyle.Normal.subTitle" />
        <TextView
            android:id="@+id/product_price_txtv"
            android:layout_width="match_parent"
            android:layout_height="20.0dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:text="¥0.00"
            android:maxEms="6"
            android:maxLines="1"
            style="@style/textStyle.Normal.lightRed" />
</LinearLayout>